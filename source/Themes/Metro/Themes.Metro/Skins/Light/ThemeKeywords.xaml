<zm:ThemeResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:zm="http://schemas.zaaml.com/xaml">

  <zm:ThemeResourceDictionary.MergedDictionaries>
    <zm:ThemeResourceDictionary Source="ThemeKeywordAssets.xaml"/>
    <zm:ThemeResourceDictionary Source="../ThemeKeywordAssets.Shared.xaml"/>
  </zm:ThemeResourceDictionary.MergedDictionaries>

  <!-- Application ThemeKeywords -->
  <zm:ThemeKeywordGroup x:Key="ApplicationThemeKeywords">
    <zm:ThemeResource Keyword="ApplicationBackgroundColor" Value="{StaticResource Metro.Application.BackgroundColor}" />
    <zm:ThemeResource Keyword="ApplicationBackgroundBrush" Value="{StaticResource Metro.Application.BackgroundBrush}" />
    <zm:ThemeResource Keyword="ApplicationForegroundColor" Value="{StaticResource Metro.Application.ForegroundColor}" />
    <zm:ThemeResource Keyword="ApplicationForegroundBrush" Value="{StaticResource Metro.Application.ForegroundBrush}" />
    <zm:ThemeResource Keyword="ApplicationBorderColor" Value="{StaticResource Metro.Application.BorderColor}" />
    <zm:ThemeResource Keyword="ApplicationBorderBrush" Value="{StaticResource Metro.Application.BorderBrush}" />

    <zm:ThemeResource Keyword="ApplicationFontFamily" Value="{StaticResource Metro.Application.FontFamily}" />
    <zm:ThemeResource Keyword="ApplicationFontSize" Value="{StaticResource Metro.Application.FontSize}" />
    <zm:ThemeResource Keyword="ApplicationFontWeight" Value="{StaticResource Metro.Application.FontWeight}" />
    <zm:ThemeResource Keyword="ApplicationFontStyle" Value="{StaticResource Metro.Application.FontStyle}" />
    <zm:ThemeResource Keyword="ApplicationFontStretch" Value="{StaticResource Metro.Application.FontStretch}" />

  </zm:ThemeKeywordGroup>

  <!-- Control ThemeKeywords -->
  <zm:ThemeKeywordGroup x:Key="ControlThemeKeywords">
    <zm:ThemeResource Keyword="ControlBackgroundColor" Value="{StaticResource Metro.Control.BackgroundColor}" />
    <zm:ThemeResource Keyword="ControlBackgroundBrush" Value="{StaticResource Metro.Control.BackgroundBrush}" />
    <zm:ThemeResource Keyword="ControlForegroundColor" Value="{StaticResource Metro.Control.ForegroundColor}" />
    <zm:ThemeResource Keyword="ControlForegroundBrush" Value="{StaticResource Metro.Control.ForegroundBrush}" />
    <zm:ThemeResource Keyword="ControlBorderColor" Value="{StaticResource Metro.Control.BorderColor}" />
    <zm:ThemeResource Keyword="ControlBorderBrush" Value="{StaticResource Metro.Control.BorderBrush}" />

    <zm:ThemeResource Keyword="ControlFontFamily" Value="{StaticResource Metro.Application.FontFamily}" />
    <zm:ThemeResource Keyword="ControlFontSize" Value="{StaticResource Metro.Application.FontSize}" />
    <zm:ThemeResource Keyword="ControlFontWeight" Value="{StaticResource Metro.Application.FontWeight}" />
    <zm:ThemeResource Keyword="ControlFontStyle" Value="{StaticResource Metro.Application.FontStyle}" />
    <zm:ThemeResource Keyword="ControlFontStretch" Value="{StaticResource Metro.Application.FontStretch}" />
  </zm:ThemeKeywordGroup>

  <!-- Selection ThemeKeywords -->
  <zm:ThemeKeywordGroup x:Key="SelectionThemeKeywords">
    <zm:ThemeResource Keyword="SelectionBorderColor" Value="{StaticResource Metro.Selection.BorderColor}" />
    <zm:ThemeResource Keyword="SelectionBorderBrush" Value="{StaticResource Metro.Selection.BorderBrush}" />
    <zm:ThemeResource Keyword="SelectionBackgroundColor" Value="{StaticResource Metro.Selection.BackgroundColor}" />
    <zm:ThemeResource Keyword="SelectionBackgroundBrush" Value="{StaticResource Metro.Selection.BackgroundBrush}" />
    <zm:ThemeResource Keyword="SelectionForegroundColor" Value="{StaticResource Metro.Selection.ForegroundColor}" />
    <zm:ThemeResource Keyword="SelectionForegroundBrush" Value="{StaticResource Metro.Selection.ForegroundBrush}" />

    <zm:ThemeResource Keyword="InactiveSelectionBorderColor" Value="{StaticResource Metro.InactiveSelection.BorderColor}" />
    <zm:ThemeResource Keyword="InactiveSelectionBorderBrush" Value="{StaticResource Metro.InactiveSelection.BorderBrush}" />
    <zm:ThemeResource Keyword="InactiveSelectionBackgroundColor" Value="{StaticResource Metro.InactiveSelection.BackgroundColor}" />
    <zm:ThemeResource Keyword="InactiveSelectionBackgroundBrush" Value="{StaticResource Metro.InactiveSelection.BackgroundBrush}" />
    <zm:ThemeResource Keyword="InactiveSelectionForegroundColor" Value="{StaticResource Metro.InactiveSelection.ForegroundColor}" />
    <zm:ThemeResource Keyword="InactiveSelectionForegroundBrush" Value="{StaticResource Metro.InactiveSelection.ForegroundBrush}" />
  </zm:ThemeKeywordGroup>

</zm:ThemeResourceDictionary>
